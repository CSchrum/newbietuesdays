<?xml version="1.0"?>
<config>
    <modules>
        <CLS_RequestCatalog>
            <version>1.0.1</version>
        </CLS_RequestCatalog>
    </modules>
    <frontend>
        <routers>
            <cls_requestcatalog>
                <use>standard</use>
                <args>
                    <module>CLS_RequestCatalog</module>
                    <frontName>requestcatalog</frontName>
                </args>
            </cls_requestcatalog>
        </routers>
        <layout>
            <updates>
                <requestcatalog>
                    <file>requestcatalog.xml</file>
                </requestcatalog>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <cls_requestcatalog>
                <class>CLS_RequestCatalog_Block</class>
            </cls_requestcatalog>
        </blocks>
        <helpers>
            <cls_requestcatalog>
                <class>CLS_RequestCatalog_Helper</class>
            </cls_requestcatalog>
        </helpers>
        <models>
            <cls_requestcatalog>
                <class>CLS_RequestCatalog_Model</class>
                <resourceModel>cls_requestcatalog_resource</resourceModel>
            </cls_requestcatalog>

            <cls_requestcatalog_resource>
                <class>CLS_RequestCatalog_Model_Resource</class>
                <entities>
                    <requestcatalog>
                        <table>requestcatalog</table>
                    </requestcatalog>
                </entities>
            </cls_requestcatalog_resource>
        </models>
        <resources>
            <cls_requestcatalog_setup>
                <setup>
                    <module>CLS_RequestCatalog</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cls_requestcatalog_setup>
            <cls_requestcatalog_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cls_requestcatalog_write>
            <cls_requestcatalog_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cls_requestcatalog_read>
        </resources>
    </global>
</config>
